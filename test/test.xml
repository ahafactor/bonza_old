<library>
	<common>
		<all>
			<unwrap>core</unwrap>
		</all>
	</common>
	<applet name="test">
		<state name="state"><integer/></state>
		<content>
			<text><strong>test:</strong>[%nbsp%][%state%]</text>
		</content>
		<init id="id">
			<state>0</state>
			<actions>
				<list>
					<delay>
						<input>{inc:}</input>
						<by>time.sec</by>
					</delay>
				</list>
			</actions>
		</init>
		<respond>
			<input name="input"><prop name="inc"/></input>
			<state>state+1</state>
			<actions>
				<list>
					<redraw/>
					<delay>
						<input>{inc:}</input>
						<by>time.sec</by>
					</delay>
				</list>
			</actions>
		</respond>
		<events/>
	</applet>
</library>
