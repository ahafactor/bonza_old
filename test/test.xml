<library>
	<common>
		<all>
			<unwrap>core</unwrap>
		</all>
	</common>
	<applet name="test">
		<state name="state">
			<any>
				<prop name="up"/>
				<prop name="down"/>
			</any>
		</state>
		<content>
			<calc>
				content
				<where>
					<any>
						<all>
							<is>state.up</is>
							<def var="content">
								<text>
									<span class="button-up">[%nbsp%]Up[%nbsp%]</span>
								</text>
							</def>
						</all>
						<all>
							<is>state.down</is>
							<def var="content">
								<text>
									<span class="button-down">[%nbsp%]Down[%nbsp%]</span>
								</text>
							</def>
						</all>
					</any>
				</where>
			</calc>
		</content>
		<init id="id">
			<state>{up:}</state>
			<actions>
				<no>
					<action/>
				</no>
			</actions>
		</init>
		<respond>
			<input name="input">
				<any>
					<prop name="up"/>
					<prop name="down"/>
				</any>
			</input>
			<state>input</state>
			<actions>
				<list>
					<redraw/>
				</list>
			</actions>
		</respond>
		<events>
			<mousedown>{down:}</mousedown>
			<mouseup>{up:}</mouseup>
		</events>
	</applet>
</library>
